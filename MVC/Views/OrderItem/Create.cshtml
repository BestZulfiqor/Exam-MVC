@model Domain.Dtos.OrderItems.CreateOrderItemDto
<h2 class="mb-4 fw-bold text-center">Create OrderItem</h2>

<form method="post" class="card p-5" style="display: flex; flex-direction: column; gap: 10px; max-width: 800px; margin: auto">
    <div class="form-group">
        <label asp-for="OrderId" class="control-label">Order id</label>
        <input type="number" asp-for="OrderId" class="form-control">
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductId" class="control-label">Choose product</label>
        <select asp-for="ProductId" class="form-control" 
                asp-items="@ViewBag.Products">
            <option value="">-- Select Products --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantity</label>
        <input type="number" asp-for="Quantity" class="form-control">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    
    <button class="btn btn-primary" type="submit">Create orderItem</button>
</form>